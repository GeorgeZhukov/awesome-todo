.new-project.center-block
  %h2 New project

  %form{"ng-submit"=>"create()", "ng-init"=>"project={}"}
    .form-group
      %label{:for=>"title"} Project title
      %input#title{"ng-model"=>"project.title", :required=>"", :autofocus=>""}

    %button.btn.btn-success.btn-block{:type=>"submit"}
      %span.fa.fa-plus
      Create