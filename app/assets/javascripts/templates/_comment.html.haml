.row
  %span{"editable-text"=>"comment.text","onaftersave"=>"saveComment(comment)"}= "{{ comment.text }}"

  .pull-right
    %button.btn.btn-xs.btn-danger{"ng-click"=>"removeComment(comment)"} Remove comment

%ul.attachments
  %li.attached-file{"ng-repeat"=>"attached_file in comment.attached_files"}
    %a{:href=>"{{ attached_file.attachment_url }}"}= "{{ attached_file.attachment_identifier }}"
%br